#!/usr/bin/env ruby
begin
  require File.expand_path('../../.bundle/environment', __FILE__)
rescue LoadError
  # Fallback on rubygems
  require "rubygems"
end

require 'git-style-binary/command'

# Get library
libdir = File.join(File.dirname(__FILE__), '..', 'lib')
require File.expand_path('vagrant', libdir)

GitStyleBinary.command do
  short_desc "provision a vagrant server"
  banner <<-EOS
Usage: #{command.full_name} #{all_options_string}

(Re)run provisioning on a running vagrant server.

EOS

  run do |command|
    Vagrant::Commands.execute(:provision, {})
  end
end
